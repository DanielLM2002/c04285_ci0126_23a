@model Examen2.Models.VehiculosModel
@{
    ViewBag.Title = "EditarVehiculo";
}
<html>
<head>
</head>
<body>

    @using (Html.BeginForm("EditarVehiculo", "vehiculos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h1>Formulario de edicion de vehiculos</h1>
        @Html.HiddenFor(model=>model.ID)
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @required="required" })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger"})
            </div>
            <div class="from-group">
                @Html.LabelFor(model => model.Tipo)
                @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control", @required="required" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })

            </div>
            <div class="from-group">
                @Html.LabelFor(model => model.Popularidad)
                @Html.TextBoxFor(model => model.Popularidad, new { @class = "form-control", @required="required" })
                @Html.ValidationMessageFor(model => model.Popularidad, "", new { @class = "text-danger" })
            </div>
            <div class="from-group">
                @Html.LabelFor(model => model.Precio)
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @required="required" })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NecesitaLicencia)
                @Html.CheckBoxFor(model => model.NecesitaLicencia)
                @Html.ValidationMessageFor(model => model.NecesitaLicencia, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID)
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @required="required" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>

            <input type="submit" class="btn btn-success" value="Guardar cambios">
        </div>
    }
</body>
</html>

