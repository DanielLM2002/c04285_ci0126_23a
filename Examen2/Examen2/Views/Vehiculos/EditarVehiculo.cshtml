@model Examen2.Models.VehiculosModel
@{
    ViewBag.Title = "EditarVehiculo";
}
<html>
<head>
</head>
<body>

    @using (Html.BeginForm("EditarVehiculo", "vehiculos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h1 style="text-align: center">Formulario de edicion de vehiculos</h1>
        @Html.HiddenFor(model=>model.ID)
        <div class="form-horizontal">
            <div class="form-group ">
                @Html.LabelFor(model => model.Nombre, new {style = "font-weight: bold"})
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", style ="width: 100%", id = "NombreForm"})
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger"})
            </div>
            <div class="from-group ">
                @Html.LabelFor(model => model.Tipo, new {style = "font-weight: bold"})
                @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control", style ="width: 100%", id = "TipoForm" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })

            </div>
            <div class="from-group">
                @Html.LabelFor(model => model.Popularidad, new {style = "font-weight: bold"})
                @Html.TextBoxFor(model => model.Popularidad, new { @class = "form-control", style ="width: 100%", id = "PopularidadForm" })
                @Html.ValidationMessageFor(model => model.Popularidad, "", new { @class = "text-danger" })
            </div>
            <div class="from-group">
                @Html.LabelFor(model => model.Precio, new {style = "font-weight: bold"})
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", style ="width: 100%", id = "PrecioForm" })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NecesitaLicencia, new { style = "font-weight: bold" })
                @Html.CheckBoxFor(model => model.NecesitaLicencia, new { id = "LicenciaForm" });
                @Html.ValidationMessageFor(model => model.NecesitaLicencia, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID, new {style = "font-weight: bold"})
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", style ="width: 100%", id = "IdForm" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>

            <input type="submit" id="modifyButton" class="btn btn-success" value="Guardar cambios">
        </div>
    }
</body>
</html>

